@model AOCMDB.Models.Nodes.ExternalLogicalStorageNode

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ExternalLogicalStorageNode</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ExternalLogicalStorageName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExternalLogicalStorageName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FriendlyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FriendlyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Details)
        </dd>

        <dd>
            <table class="table">
                <tr>
                    <th>
                        Server Or Appliance Name
                    </th>
                    <th>
                        Friendly Name
                    </th>
                    <th>
                    </th>
                </tr>

                @foreach (var item in Model.GetUpstreamServerOrApplianceDependencies())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServerOrApplianceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FriendlyName)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", "ServerOrAppliances", new { id = item.ServerOrApplianceId }, null)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    <input type="button" value="Edit" onclick="location.href='@Url.Action("Edit", new { id = Model.ExternalLogicalStorageId })'" /> |
    <input type="button" value="Back to List" onclick="location.href='@Url.Action("Index")'" />
</p>
