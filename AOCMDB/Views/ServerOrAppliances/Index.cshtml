@model IEnumerable<AOCMDB.Models.Nodes.ServerOrApplianceNode>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <input type="button" value="Create New" onclick="location.href='@Url.Action("Create")'" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServerOrApplianceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FriendlyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServerOrApplianceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FriendlyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ServerOrApplianceId })
        </td>
    </tr>
}

</table>
